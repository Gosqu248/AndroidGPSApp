<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#000000">

    <!-- Szary -->
    <TextView
        android:id="@+id/tvTime"
        android:layout_width="match_parent"
        android:layout_height="53dp"
        android:background="#565454"
        android:padding="8dp"
        android:textAlignment="center"
        android:text="--:--"
        android:textColor="#FFFFFF"
        android:textSize="34sp" />

    <!-- Czarny -->
    <TextView
        android:id="@+id/tvVariant"
        android:layout_width="match_parent"
        android:layout_height="53dp"
        android:background="#000000"
        android:padding="8dp"
        android:textAlignment="center"
        android:text=" Wariant"
        android:textColor="#FFFFFF"
        android:textSize="26sp" />

    <!-- Ciemny szary | Szary -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvPrevStopLabel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#444444"
            android:padding="8dp"
            android:text=" Poprzedni przystanek"
            android:textColor="#FFFFFF"
            android:textSize="26sp" />

        <TextView
            android:id="@+id/tvPrevStop"
            android:layout_width="323dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#888888"
            android:padding="8dp"
            android:text="-"
            android:textColor="#FFFFFF"
            android:textSize="26sp" />
    </LinearLayout>

    <!-- Szary | Czarny -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvNowLabel"
            android:layout_width="0dp"
            android:layout_height="59dp"
            android:layout_weight="1"
            android:background="#888888"
            android:padding="8dp"
            android:text=" Teraz"
            android:textColor="#FFFFFF"
            android:textSize="26sp" />

        <TextView
            android:id="@+id/tvNow"
            android:layout_width="323dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#000000"
            android:padding="8dp"
            android:text="Teraz"
            android:textColor="#FFFFFF"
            android:textSize="26sp" />
    </LinearLayout>

    <!-- Ciemny szary | Szary -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvNextStopLabel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#444444"
            android:padding="8dp"
            android:text=" Następny przystanek"
            android:textColor="#FFFFFF"
            android:textSize="26sp" />

        <TextView
            android:id="@+id/tvNextStop"
            android:layout_width="322dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#888888"
            android:padding="8dp"
            android:text="-"
            android:textColor="#FFFFFF"
            android:textSize="26sp" />
    </LinearLayout>

    <!-- Szary | Czarny -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvPlannedTimeLabel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#444444"
            android:padding="8dp"
            android:text=" Planowany czas następnego przystanku"
            android:textColor="#FFFFFF"
            android:textSize="26sp" />

        <TextView
            android:id="@+id/tvPlannedTime"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#000000"
            android:padding="8dp"
            android:text="czas"
            android:textColor="#FFFFFF"
            android:textSize="26sp" />
    </LinearLayout>

    <!-- Ciemny szary | Szary -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvTiltLabel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#000000"
            android:padding="8dp"
            android:text=" Aktualny kąt nachylenia"
            android:textColor="#FFFFFF"
            android:textSize="26sp" />

        <TextView
            android:id="@+id/tvTilt"
            android:layout_width="328dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#888888"
            android:padding="8dp"
            android:text="-"
            android:textColor="#FFFFFF"
            android:textSize="26sp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvAddressLabel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#888888"
            android:padding="8dp"
            android:text=" Aktualny adres"
            android:textColor="#FFFFFF"
            android:textSize="26sp" />

        <TextView
            android:id="@+id/tvAddress"
            android:layout_width="328dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#000000"
            android:padding="8dp"
            android:text="-"
            android:textColor="#FFFFFF"
            android:textSize="26sp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvAccuracyLabel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#444444"
            android:padding="8dp"
            android:text=" Aktualna dokładność"
            android:textColor="#FFFFFF"
            android:textSize="26sp" />

        <TextView
            android:id="@+id/tvAccuracy"
            android:layout_width="328dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#888888"
            android:padding="8dp"
            android:text="-"
            android:textColor="#FFFFFF"
            android:textSize="26sp" />
    </LinearLayout>
</LinearLayout>
